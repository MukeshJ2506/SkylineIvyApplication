{{!< default}}
			<article class="blog-post">
				<p><a href="/blog">&larr; back to the blog</a></p>
				<hr>
                <div class="blog-post-body">
					<h2>{{data.post.title}}</h2>
					<h5 class="post-meta">
						{{#if data.post.author.name.first}}By {{data.post.author.name.first}} {{data.post.author.name.last}}{{/if}}
                        &nbsp;/&nbsp;Published on : {{formatDate data.post.publishedDate}}
					</h5>
                    <div class="blog-post-text">
                        {{{data.post.content.extended}}}
                    </div>
                </div>
			</article>