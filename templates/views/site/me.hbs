{{!< default}}
	<h3>My Profile</h3>
			<form method="post" action="/me">
				<input type="hidden" name="action" value="Update Profile">
				<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
					<label>First Name</label>
					<input type="text" name="firstName" disabled class="form-control" value="{{profile.firstName}}">
				</div>
                <div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
					<label>Last Name</label>
					<input type="text" name="lastName" disabled class="form-control" value="{{profile.lastName}}">
				</div>
				<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
					<label>Email</label>
					<input type="email" name="email" disabled class="form-control" value="{{profile.email}}">
				</div>
				<div class="form-group">
					<label>Mobile Number</label>
					<input type="tel" name="mobileNo" required class="form-control editableCtrl" value="{{profile.mobileNo}}">
                    <input type="hidden" id="mobileNo" value="{{profile.mobileNo}}">
				</div>
                <div class="form-group">
					<label>Stay Type</label>
					<input type="text" name="towerName" disabled class="form-control" value="{{profile.towerName}}">
				</div>
                <div class="form-group">
					<label>Tower Name</label>
					<input type="text" name="stayType" disabled class="form-control" value="{{profile.stayType}}">
				</div>
                <div class="form-group">
					<label>Apartment Number</label>
					<input type="text" name="apartmentNo" disabled class="form-control" value="{{profile.apartmentNo}}">
				</div>
				<div class="form-group {{#if validationErrors.message}}has-error{{/if}} ">
					<label>Present Address</label>
					<textarea required name="presentAddress" placeholder="Leave us a message..." rows="4" class="form-control editableCtrl">{{profile.presentAddress}}</textarea>
                    <input type="hidden" id="presentAddress" value="{{profile.presentAddress}}">
				</div>
				<div class="form-actions">
					<button type="submit" disabled class="btn btn-block btn-primary btn-submit" id="editBtn">Edit Profile</button>
				</div>
			</form>
<script>
$(document).ready(function(){
    $(".editableCtrl").on("change",function(ev){
        var thisObj = $(this);
        var identifier = thisObj.attr("name");
        var compareVal = $("#"+identifier).val();
        if(compareVal != $.trim(thisObj.val())){
            $("#editBtn").removeAttr("disabled");
        }else{
             $("#editBtn").attr("disabled","disabled");
        }
    })
})
</script>