{{!< default}}
<link href="../bower_components/bootstrap3-wysihtml5-bower/dist/bootstrap3-wysihtml5.min.css" rel="stylesheet">
	<h3>Create a Post.</h3>
			<form method="post" action="/blog/create">
				<input type="hidden" name="action" value="Submit Blog">
				<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
					<label>Blog Title</label>
					<input type="text" name="title" required class="form-control" value="{{formData.title}}">
				</div>
				<div class="form-group {{#if validationErrors.message}}has-error{{/if}} ">
					<label>Blog Summary</label>
					<textarea required name="summary" id="summary" placeholder="Please enter your summary here." rows="4" class="form-control">{{formData.summary}}</textarea>
				</div>
                <div class="form-group {{#if validationErrors.message}}has-error{{/if}} ">
					<label>Blog Content</label>
					<textarea required name="maincontent" id="maincontent" placeholder="Please enter your post here." rows="20" class="form-control" >{{formData.maincontent}}</textarea>
				</div>
				<div class="form-actions">
					<button type="submit" class="btn btn-block btn-primary btn-submit">Submit Blog</button>
				</div>
			</form>
<script src="../bower_components/bootstrap3-wysihtml5-bower/dist/bootstrap3-wysihtml5.all.min.js"></script>
<script>
    $('#maincontent').wysihtml5({
      toolbar: {
        "font-styles": true,
        "emphasis": true,
        "lists": true,
        "html": true,
        "link": true,
        "image": false,
        "color": false,
        "blockquote": true
      }
    });
</script>