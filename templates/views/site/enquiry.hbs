{{!< default}}
<div class="container">
	<h3>Contact Association for enquiry</h3>
			<form method="post" action="/enquiry">
				<input type="hidden" name="action" value="Contact Association">
				<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
					<label>First Name</label>
					<input type="text" name="firstname" required class="form-control" value="{{formData.firstname}}">
				</div>
                <div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
					<label>Last Name</label>
					<input type="text" name="lastname" required class="form-control" value="{{formData.lastname}}">
				</div>
				<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
					<label>Email</label>
					<input type="email" name="email" required class="form-control" value="{{formData.email}}">
				</div>
				<div class="form-group">
					<label>Phone</label>
					<input type="tel" name="phone" required class="form-control" value="{{formData.phone}}">
				</div>
				<div class="form-group {{#if validationErrors.enquiryType}}has-error{{/if}}">
					<label>What are you contacting us about?</label>
					<select required name="enquirytype" class="form-control">
						<option value="">(select one)</option>
						{{#each enquiryTypes}}
						<option value="{{value}}">{{label}}</option>
						{{/each}}
					</select>
				</div>
				<div class="form-group {{#if validationErrors.message}}has-error{{/if}} ">
					<label>Message</label>
					<textarea required name="message" placeholder="Leave us a message..." rows="4" class="form-control">{{formData.message}}</textarea>
				</div>
				<div class="form-actions">
					<button type="submit" class="btn btn-block btn-primary btn-submit">Contact Association</button>
				</div>
			</form>
</div>
