{{!< default}}
		<h3>Please change your password.</h3>
        <form method="post" action="/resetpassword/{{key}}">
        <div class="form-group label-floating"><input type="password" required class="form-control" placeholder="Please enter your new Password" name="password"/></div>
        <div class="form-group label-floating"><input type="password" required class="form-control" placeholder="Please re-enter your new Password" name="password_confirm"/></div>
        <input type="hidden" name='action' value='reset-password'/>
        <div class="form-actions"><button type="submit" class="btn btn-block btn-primary btn-submit btn-raised">Reset Password</button></div>
        </form>