<h1>Hi {{firstname}}</h1>
<p class="text-larger">An enquiry was just submitted to:</p>
{{#if enquiry.email}}
	<p class="text-larger">From
	{{#if enquiry.name.first}}
		<strong>{{enquiry.name.first}} {{enquiry.name.last}}</strong>
	{{/if}}
	
	{{#if enquiry.email}}
		(<a href="mailto:{{enquiry.email}}">{{enquiry.email}}</a>)			
	{{/if}}
	</p>
	
	{{#if enquiry.phone}}
		<p class="text-larger">Phone: {{enquiry.phone}}</p>
	{{/if}}
	
	{{#if enquiry.enquirytype}}
		<p class="text-larger">{{underscoreFormat enquiry.enquirytype 'enquirytype'}}</p>
	{{/if}}
	
	{{#if enquiry.message}}
		{{{enquiry.message.html}}}
	{{/if}}
	
	<p class="text-muted">Sent {{underscoreFormat enquiry 'createdAt'}}</p>
	<button url="/keystone/enquiries/{{enquiry.id}}" label="Open Keystone" />
{{/if}}